<h1 class="text-center">Registro</h1>
<div class="container d-flex justify-content-center">
    <form class="row g-3" method="POST">
        <div class="col-12">
            <label class="form-label">
                Nombres
            </label>
            <input type="text" class="form-control" required minlength="2" maxlength="45">
        </div>
        <div class="col-12">
            <label class="form-label">
                Apellidos
            </label>
            <input type="text" class="form-control" required minlength="2" maxlength="45">
        </div>
        <div class="col-12">
            <label class="form-label">
                Correo
            </label>
            <input type="email" class="form-control" required minlength="8" maxlength="128">
            <div class="form-text">Nunca compartiremos tu información con nadie.</div>
        </div>
        <div class="col-12">
            <label class="form-label">
                Contraseña
            </label>
            <input type="password" class="form-control" minlength="4" maxlength="64">
        </div>
        <div class="col-12 text-center p-3">
            <a type="submit" class="btn btn-dark">Registrarme</a>
            <a type="button" class="btn btn-secondary" href="/">Cancelar</a>
        </div>
    </form>
</div>