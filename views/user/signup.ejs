<h1 class="text-center"><%= locals.header %></h1>
<div class="container d-flex justify-content-center mt-5">
  <form class="row g-3" action="/registrar" method="POST">
    <div class="col-12">
      <label class="form-label">Usuario</label>
      <input
        type="text"
        class="form-control"
        required
        minlength="4"
        maxlength="64"
        name="username"
        oninput="checkPassword(document.getElementById('confirmPassword'))"
      />
      <div class="form-text">Nunca compartiremos tu información con nadie.</div>
    </div>
    <div class="col-12">
      <label class="form-label">Contraseña</label>
      <input
        id="password"
        type="password"
        class="form-control"
        minlength="4"
        maxlength="64"
        name="password"
        oninput="checkPassword(document.getElementById('confirmPassword'))"
      />
    </div>
    <div class="col-12">
      <label class="form-label">Confirmar Contraseña</label>
      <input
        id="confirmPassword"
        type="password"
        class="form-control"
        minlength="4"
        maxlength="64"
        oninput="checkPassword(this)"
      />
    </div>
    <div class="col-12 text-center p-3">
      <button type="submit" class="btn btn-dark">Registrarme</button>
      <a type="button" class="btn btn-secondary" href="/">Cancelar</a>
    </div>
  </form>
</div>
