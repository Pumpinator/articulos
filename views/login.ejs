<div class="container d-flex justify-content-center">
    <form class="row g-3" method="POST">
        <div class="col-12">
            <label class="form-label">
                Correo
            </label>
            <input type="email" class="form-control" required minlength="8" maxlength="128">
            <div class="form-text">Nunca compartiremos tu información con nadie.</div>
        </div>
        <div class="col-12">
            <label class="form-label">
                Contraseña
            </label>
            <input type="password" class="form-control" minlength="4" maxlength="64">
        </div>
        <div class="col-12 text-center p-3">
            <button type="submit" class="btn btn-dark">Ingresar</button>
        </div>
    </form>

</div>