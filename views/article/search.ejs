<div class="row mb-3">
  <div class="col">
    <form class="d-flex p-3" action="/articulo/buscar" method="POST" role="buscar">
      <input
        class="form-control w-75"
        type="search"
        placeholder="Buscar"
        aria-label="Buscar"
        name="searchTerm"
      />
    </form>
  </div>
  <div class="col text-center">
    <h1><%= locals.header %></h1>
  </div>
  <div class="col"></div>
</div>

<div class="row align-items-md-stretch mb-3">
  <% data.forEach(article => { %>
  <a
    class="col-md-6 text-decoration-none mb-3"
    href="/articulo/<%= article._id %>"
  >
    <div class="h-100 p-5 text-bg-dark rounded-3">
      <h2><%= article.title %></h2>
      <small><%= article.created_at.toDateString() %></small>
      <p><%= article.body %></p>
    </div>
  </a>
  <% }) %>
</div>
